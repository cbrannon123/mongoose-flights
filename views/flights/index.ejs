<%- include('../partials/header') %>
       
        <table class="mainrow">
          <thead>
            <tr>
              <th class="trow">Airline</th>
              <th class="trow">Flight Number</th>
              <th class="trow">Departure</th>
              <th class="trow">Airport</th>
            </tr>
          </thead>
          <tbody>
            
              
           
            <% flights.forEach(function(f) { %>
              
              <tr> 
                <td class="mainrow"><%= f.airline %></td>
                <td class="mainrow"><%= f.flightNo %></td>
                <% if (f.departs < Date.now()) {%>
                  <td class="overdue"><%= f.departs %></td>
                  <%} else {%>
                    <td class="due"><%= f.departs %></td>
                    <% } %>
                    <td class="mainrow"><%= f.airport %></td>
                    <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
                    <td><form action="/flights/<%= f. id%>/delete" method="POST">
                      <input type="submit" value="Delete">
                    </form> </td>
                  </tr>
                  
          
                    
                  
              <% }) %>
           
          </tbody>
        </table>
      <%- include('../partials/footer') %>